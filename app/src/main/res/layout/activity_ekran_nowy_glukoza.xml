<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5E8EF"
    tools:context=".EkranNowyGlukoza">

    <TextView
        android:id="@+id/textNowyGlukoza1"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="Daily Glucose"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#293995"
        android:textSize="38sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textNowyGlukoza2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Wprowadz pomiar glukozy"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNowyGlukoza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNowyGlukoza1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextNowyGlukoza"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textNowyGlukoza3"
        app:layout_constraintEnd_toStartOf="@+id/textNowyGlukoza5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNowyGlukoza2" />

    <Button
        android:id="@+id/btnNowyGlukoza1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="145dp"
        android:background="@drawable/roundestyle"
        android:text="Zatwierdz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNowyGlukoza2"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:backgroundTint="#2196F3"
        app:icon="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/textNowyGlukoza5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="mg/dL"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNowyGlukoza1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toEndOf="@+id/editTextNowyGlukoza"
        app:layout_constraintTop_toBottomOf="@+id/textNowyGlukoza2"
        app:layout_constraintVertical_bias="0.093" />

    <TextView
        android:id="@+id/textNowyGlukoza3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Data pomiaru"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvNowyGlukozaData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNowyGlukoza" />

    <TextView
        android:id="@+id/textNowyGlukoza4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Godzina pomiaru"
        android:textColor="#0B0B0B"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvNowyGlukozaGodzina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNowyGlukozaData" />

    <TextView
        android:id="@+id/tvNowyGlukozaData"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="6dp"
        android:text="                                               "
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textNowyGlukoza4"
        app:layout_constraintEnd_toStartOf="@+id/btnDateGlukoza"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNowyGlukoza3" />

    <TextView
        android:id="@+id/tvNowyGlukozaGodzina"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="7dp"
        android:text="                                               "
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNowyGlukoza1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNowyGlukoza4"
        tools:text="                                               " />

    <ImageView
        android:id="@+id/btnDateGlukoza"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="#E174D2EA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNowyGlukozaData"
        app:layout_constraintTop_toBottomOf="@+id/textNowyGlukoza5"
        app:srcCompat="@android:drawable/ic_menu_today" />

    <ImageView
        android:id="@+id/btnTimeGlukoza"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginBottom="70dp"
        android:background="#E174D2EA"
        app:layout_constraintBottom_toTopOf="@+id/btnNowyGlukoza1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/tvNowyGlukozaGodzina"
        app:layout_constraintTop_toBottomOf="@+id/btnDateGlukoza"
        app:layout_constraintVertical_bias="0.724"
        app:srcCompat="@android:drawable/ic_menu_recent_history" />

</androidx.constraintlayout.widget.ConstraintLayout>