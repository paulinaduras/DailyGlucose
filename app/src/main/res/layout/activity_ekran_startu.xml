<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5E8EF"
    tools:context=".EkranStartu">

    <TextView
        android:id="@+id/textStart2"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:fontFamily="sans-serif-medium"
        android:text="Daily Glucose"
        android:textAlignment="center"
        android:textColor="#293995"
        android:textSize="48sp"
        android:textStyle="italic"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/btnZaloguj"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStart1" />

    <TextView
        android:id="@+id/textStart1"
        android:layout_width="198dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:text="Witaj w aplikacji"
        android:textAlignment="center"
        android:textColor="#293995"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textStart2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnZaloguj"
        android:background="@drawable/roundestyle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        android:text="Zaloguj się"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnZarejestruj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStart2" />

    <Button
        android:id="@+id/btnZarejestruj"
        android:background="@drawable/roundestyle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:text="Zarejestruj się"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageEStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnZaloguj" />

    <ImageView
        android:id="@+id/imageEStart"
        android:layout_width="368dp"
        android:layout_height="347dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnZarejestruj"
        app:srcCompat="@drawable/box_cukrzyca" />

</androidx.constraintlayout.widget.ConstraintLayout>